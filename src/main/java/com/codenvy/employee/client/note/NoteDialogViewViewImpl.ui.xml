<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             ui:generateFormat="com.google.gwt.i18n.rebind.format.PropertiesFormat"
             ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
             ui:generateLocales="default">

    <ui:with field="res" type="com.codenvy.employee.client.EmployeeDataResource"/>
    <ui:with field="locale" type="com.codenvy.employee.client.EmployeeDataConstants"/>

    <g:FlowPanel>

        <g:SimplePanel>
            <g:TextArea ui:field="noteArea" styleName="{res.employDataStyle.noteArea}"/>
        </g:SimplePanel>

        <g:SimplePanel>
            <g:Button ui:field="close" text="{locale.noteCloseButton}"
                      styleName="{res.employDataStyle.closeButton}"/>
        </g:SimplePanel>

    </g:FlowPanel>

</ui:UiBinder>