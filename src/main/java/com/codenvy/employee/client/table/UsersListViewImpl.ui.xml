<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client"
             ui:generateFormat="com.google.gwt.i18n.rebind.format.PropertiesFormat"
             ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
             ui:generateLocales="default">

    <ui:with field="res" type="com.codenvy.employee.client.EmployeeDataResource"/>
    <ui:with field="resLocalisation" type="com.codenvy.employee.client.EmployeeDataConstants"/>

    <g:DockLayoutPanel unit='PX'>

        <g:north size="200">
            <g:FlowPanel>

                <g:Image resource="{res.imgBuildings}" ui:field="imageBuildings"/>
                <g:Label ui:field="labelListEmployee" styleName="{res.employDataStyle.textFromResource}"/>

            </g:FlowPanel>
        </g:north>

        <g:west size='300'>
            <g:Hyperlink ui:field="linkInfo" text="{resLocalisation.infoLinkText}" targetHistoryToken="info"/>
        </g:west>

        <g:center>
            <g:ScrollPanel styleName="{res.employDataStyle.table}">
                <c:CellTable ui:field="usersTable" styleName="{res.employDataStyle.table}"/>
            </g:ScrollPanel>
        </g:center>

        <g:east size="200">
            <g:FlowPanel>

                <g:Button ui:field="edit" styleName="{res.employDataStyle.editButtonOfUserList}"
                          text="{resLocalisation.editButtonText}"/>
                <g:Button ui:field="add" styleName="{res.employDataStyle.editButtonOfUserList}"
                          text="{resLocalisation.addButtonText}"/>
                <g:Button ui:field="delete" styleName="{res.employDataStyle.editButtonOfUserList}"
                          text="{resLocalisation.deleteButtonText}"/>

            </g:FlowPanel>
        </g:east>

    </g:DockLayoutPanel>

</ui:UiBinder>