<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client">

    <g:LayoutPanel>
        <g:layer>
            <c:CellTable ui:field="usersTable"/>
        </g:layer>

        <g:layer left="55%" right="20%" top="10%" bottom="60%">
            <g:FlowPanel width="15%">
                <g:Button ui:field="edit">Edit</g:Button>
                <g:Button ui:field="add">Add</g:Button>
                <g:Button ui:field="delete">Delete</g:Button>
            </g:FlowPanel>
        </g:layer>

    </g:LayoutPanel>

</ui:UiBinder>