<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client">

    <ui:style>
        .edit-button {
            padding-top: 5px;
            padding-bottom: 5px;
            margin-left: 5px;
            width: 49px;
            background-color: lemonchiffon;
        }
    </ui:style>
    <ui:with field="addButtonRes" type="com.codenvy.employee.client.EmployeeDataResource"/>

    <g:DockLayoutPanel unit='PX' >

        <g:west size='600'>

            <g:FlowPanel>
                <g:ScrollPanel>
                    <c:CellTable ui:field="usersTable"/>
                </g:ScrollPanel>
            </g:FlowPanel>

        </g:west>

        <g:center>

            <g:FlowPanel>
                <g:Button ui:field="edit" styleName="{style.edit-button}" text="Edit"/>
                <g:Button ui:field="add" text="Add"/>
                <g:Button ui:field="delete" styleName="{addButtonRes.employDataStyle.editButtonOfUserList}" text="Delete"/>
            </g:FlowPanel>

        </g:center>

    </g:DockLayoutPanel>

</ui:UiBinder>