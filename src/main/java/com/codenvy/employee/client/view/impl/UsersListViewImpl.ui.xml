<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client">

    <ui:style>
        .table {
            background-color: lightblue;
            width: 800px;
            height: 300px;
            margin:20px auto;
        }
        .imgBuildings {
            float:left;
            width: 320px;
            height: 200px;
        }
        .textFromResource {
            float:left;
            width: 400px;
            height: 50px;
            font-size: large;
            text-align: center;
            margin-left: 160px;
            margin-top: 90px;
            color: darkblue;
        }
    </ui:style>
    <ui:with field="res" type="com.codenvy.employee.client.EmployeeDataResource"/>

    <g:DockLayoutPanel unit='PX' >

        <g:north size="200">

            <g:FlowPanel>

                <g:SimplePanel>
                    <g:Image resource="{res.imgBuildings}" styleName="{style.imgBuildings}"/>
                </g:SimplePanel>

                <g:SimplePanel>
                    <g:Label ui:field="labelListEmployee" styleName="{style.textFromResource}"/>
                </g:SimplePanel>

            </g:FlowPanel>

        </g:north>

        <g:west size='300'>

            <g:FlowPanel>

                <g:Hyperlink ui:field="linkInfo" text="About company" targetHistoryToken="text"/>

            </g:FlowPanel>

        </g:west>

        <g:center>

            <g:FlowPanel>

                <g:ScrollPanel styleName="{style.table}">
                    <c:CellTable ui:field="usersTable" styleName="{style.table}"/>
                </g:ScrollPanel>

            </g:FlowPanel>

        </g:center>

        <g:east size="200">

            <g:FlowPanel>

                <g:Button ui:field="edit" styleName="{res.employDataStyle.editButtonOfUserList}" text="Edit"/>
                <g:Button ui:field="add" styleName="{res.employDataStyle.editButtonOfUserList}" text="Add"/>
                <g:Button ui:field="delete" styleName="{res.employDataStyle.editButtonOfUserList}" text="Delete"/>

            </g:FlowPanel>

        </g:east>

    </g:DockLayoutPanel>

</ui:UiBinder>