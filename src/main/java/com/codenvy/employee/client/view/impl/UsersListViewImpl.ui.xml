<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client">
    <ui:style>
        .styleName {
            text-wrap: none;
        }
    </ui:style>


        <g:DockLayoutPanel unit='PX'>

            <g:west size='300'>

                <g:SimplePanel>

                    <g:ScrollPanel horizontalScrollPosition="100" verticalScrollPosition="100">
                        <g:FlowPanel>

                            <c:CellTable ui:field="usersTable" styleName="{style.styleName}" pageSize="3" />
                            <c:SimplePager ui:field="simplePager" location="CENTER" />
                        </g:FlowPanel>


                    </g:ScrollPanel>

                </g:SimplePanel>


            </g:west>

            <g:center>
                <g:FlowPanel >
                    <g:Button ui:field="edit">Edit</g:Button>
                    <g:Button ui:field="add">Add</g:Button>
                    <g:Button ui:field="delete">Delete</g:Button>
                </g:FlowPanel>
            </g:center>

        </g:DockLayoutPanel>

</ui:UiBinder>