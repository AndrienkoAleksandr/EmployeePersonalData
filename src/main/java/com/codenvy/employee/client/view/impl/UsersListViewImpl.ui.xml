<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client">

    <g:DockLayoutPanel unit='PX'>

        <g:west size='300'>

            <!--<g:FlowPanel>-->
            <g:AbsolutePanel height="300" width="200">
                <g:ScrollPanel>
                    <c:CellTable ui:field="usersTable" pageSize="3"/>
                </g:ScrollPanel>
                <c:SimplePager ui:field="pager" location="CENTER"/>
        </g:AbsolutePanel>
            <!--</g:FlowPanel>-->

        </g:west>

        <g:center>

            <g:FlowPanel>
                <g:Button ui:field="edit" text="Edit"/>
                <g:Button ui:field="add" text="Add"/>
                <g:Button ui:field="delete" text="Delete"/>
            </g:FlowPanel>

        </g:center>

    </g:DockLayoutPanel>

</ui:UiBinder>