<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <g:FlowPanel>

        <g:Label text="First name"/>
        <g:TextBox ui:field="firstName"/>

        <g:Label text="Surname"/>
        <g:TextBox ui:field="lastName"/>

        <g:Label text="Address"/>
        <g:TextBox ui:field="address"/>

        <g:Button ui:field="okButton" text="Ok"/>
        <g:Button ui:field='cancelButton' text="Cancel"/>

    </g:FlowPanel>

</ui:UiBinder>